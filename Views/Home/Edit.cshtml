@model WebApplication1.Models.Student

@{
    ViewData["Title"] = "Edit";
}
<!DOCTYPE html>
<html>
<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <meta name="viewport" content="width=device-width, initial-scale = 1.0" >
    <link href="~/css/styling.css" rel="stylesheet" type="text/css" />
    <title>Insights</title>

    <!-- https://www.askpython.com/python/examples/images-into-cartoons -->
    <!-- https://www.youtube.com/watch?v=oYRda7UtuhA -->
</head>
<body>

     <section class="header"> 

         <nav class="about-section">
             <!-- <a href="content.html"><img src="images/logo.jpeg"></a> -->
             <h2><a href="#" class="logo">Insights</a></h2>
             <div class="nav-links" id="navLinks">
                <i class="fa fa-times" onclick="hideMenu()" ></i>
                 <ul>
                     @Html.ActionLink("Home","FrontPage","Home", null, null)
                     
                     @Html.ActionLink("Insights","Index","Home", null, null)
                     @Html.ActionLink("AboutUs","AboutUs","Home", null, null)
                     
                 </ul>
              </div>         
         </nav>
          <div class="text-box">
              <h1>Use this website to add, delete and update student information in the portal</h1>
          </div>
</section>



<h3  class="text-box">Update the information of student using below form</h3>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly"  class="text-1"></div>
            <input type="hidden" asp-for="studentId" />
            <div class="form-group">
                <label asp-for="studentName"  class="text-1"></label>
                <input asp-for="studentName"  class="text-2" />
                <span asp-validation-for="studentName"  class="text-2"></span>
            </div>
            <div class="form-group" >
                <label asp-for="studentScore"  class="text-1"></label>
                <input asp-for="studentScore"  class="text-2" />
                <span asp-validation-for="studentScore"  class="text-2"></span>
            </div>
            <div class="form-group">
                <label asp-for="appliedUniversity"  class="text-1"></label>
                <input asp-for="appliedUniversity"  class="text-2" />
                <span asp-validation-for="appliedUniversity"  class="text-2"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save"  class="text-1" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"  class="text-box">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

</body>
</html>
